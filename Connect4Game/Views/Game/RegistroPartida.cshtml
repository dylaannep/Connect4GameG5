@model IEnumerable<PartidaModel>
@{
    ViewData["Title"] = "Lista de Jugadores";
}




<div class="container mt-4">
    <div class="row align-items-center mb-5">
        <div class="col">
            <h2 class="mb-0">Registro de Partidas</h2>
        </div>
       
    </div>

    <!-- Tabla partidas -->
    <div class="row">
        <div class="col-12">
            <table id="tablaPartidas" class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Jugador1</th>
                        <th>Jugador2</th>
                        <th>Estado</th>
                        <th>Ganador</th>
                        <th>Fecha Creación</th>
                        <th>Acción</th>  
                    </tr>
                </thead>
                <tbody>
                    @foreach (var partida in Model)
                    {
                        <tr class="text-light">
                            <td>@partida.Jugador1.Nombre</td>
                            <td>@partida.Jugador2.Nombre</td>
                            <td>@partida.Estado</td>
                            @if (partida.Ganador == null)
                            {
                                <td>En juego</td>
                            }
                            else
                            {
                                <td>@partida.Ganador.Nombre</td>
                            }
                            <td>@partida.Fecha</td>
                            <td> <a asp-controller="Game" asp-action="VerPartida" asp-route-id="@partida.Id">Ver Partida</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>