@{
    ViewData["Title"] = "Home Page";
}
<div class="animated bounceInDown">
    <h1 class="game-heading">Bienvenido a Conecta 4</h1>
    <p class="game-subtitle">Selecciona una opción para comenzar.</p>

    <div class="row justify-content-center mt-4">
        <div class="col-md-2 mb-3">
            <a href="/Partida/Crear" class="btn btn-game btn-primary w-100">🎯 Crear Partida</a>
        </div>
        <div class="col-md-2 mb-3">
            <a class="btn btn-game btn-secondary w-100" data-bs-toggle="modal"
                                data-bs-target="#modalCrearJugador">👥 Crear Jugador</a>
        </div>
        <div class="col-md-2 mb-3">
            <a href="/Partida/Registro" class="btn btn-game btn-info w-100">📜 Partidas Registro </a>
        </div>
        <div class="col-md-2 mb-3">
            <a asp-controller="Jugador" asp-action="Index" class="btn btn-game btn-success w-100">🏆 Marcadores</a>
        </div>
    </div>

</div>
